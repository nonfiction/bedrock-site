{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
    <div id="preload"></div>

		{% block navbar %}
		<nav id="bar">
			<div class="container">

				<div class="nav-logo">
					<a href="/" title="{{ site.title }}" rel="home" id="logo">
					</a>
				</div>

				<div class="nav-section">
				</div>

				<div class="nav-toggle">
					<a href="#"></a>
				</div>

			</div>
		</nav>
		<div id="spacer"></div>
		{% endblock %}


		<nav id="primary" role="navigation">
			{% block primary %}
			<div class="container">
				<div class="sub-container">
					<a href="/" title="{{ site.title }}" rel="home" class="logo">
					</a>
					{% include "menu.twig" with {'items': menu.get_items} %}
				</div>
			</div>
			{% endblock %}
		</nav>


		<header id="hero">
			{% block hero %}
			<div class="container">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{% block content %}
				<div class="wrapper {{sidebar_class}}">
						Sorry, no content
				</div>
				{% if sidebar %}
					<aside class="layout-sidebar">
						{{sidebar}}
					</aside>
				{% endif %}
			{% endblock %}
		</section>

		{% block footer %}
			<footer id="footer">
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
